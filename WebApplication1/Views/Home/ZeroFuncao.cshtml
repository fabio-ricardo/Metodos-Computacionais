@model WebApplication1.Models.FormulaInputZeroFuncaoModel

@using (Html.BeginForm("ZeroFuncao", "Home", FormMethod.Post))
{
    <div class="jumbotron">
        <h1>Zero de Função</h1>
        <br />
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Metodo, new { @class = "required control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(x => x.Metodo, "--Selecione-- ")
                </div>
            </div>

            <div class="form-group">
                @Html.Label("f(x)=", new { @class = "required control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(x => x.Funcao, new { @class = "col-md-8" })

                    <span>
                        <a class="btn btn-success" href="https://msdn.microsoft.com/en-us/library/system.math%28v=vs.110%29.aspx?f=255&MSPPError=-2147217396">
                            Veja as funções disponíveis aqui
                        </a>
                    </span>
                </div>
            </div>

            <div id="derivada" class="form-group">
                @Html.Label("f'(x)=", new { @class = "required control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(x => x.Derivada, new { @class = "col-md-8" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.A, new { @class = "required control-label col-md-4", @id = "labelAText" })
                <div class="col-md-8">
                    @Html.EditorFor(x => x.A, new { @class = "col-md-8" })
                </div>
            </div>

            <div id="labelB" class="form-group">
                @Html.LabelFor(model => model.B, new { @class = "required control-label col-md-4", @id = "labelBText"})
                <div class="col-md-8">
                    @Html.EditorFor(x => x.B, new { @class = "col-md-4" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Erro, new { @class = "required control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(x => x.Erro, new { htmlAttributes = new { @class = "col-md-4" } })
                </div>
            </div>
        </div>




        <button class="btn btn-primary" style="float: right;" type="submit">Calcular</button>
        <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Voltar</a>

    </div>
}
<script type="text/javascript" src="~/Scripts/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#derivada').hide();
        $('#Metodo').change(function () {
            var num = $(this).find('option:selected').val();
            if (num < 3) {
                $('#labelAText').text("Intervalo A");
                $('#labelBText').text("Intervalo B");
            } else {
                $('#labelAText').text("X0");
                $('#labelBText').text("X1");

            }
            if (num == 3) {
                $('#derivada').show();
                $('#labelB').hide();
            } else {
                $('#derivada').hide();
                $('#labelB').show();
            }
        });
    });


</script>